doctype html

html(lang="en")
head
	title Featured Wikipedia
	link(rel='stylesheet'
		 type='text/css'
		 href='css/style.css'
		 media='screen')
	script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js")
	script(src="https://www.gstatic.com/charts/loader.js")
	script(src="/js/main.js")
		 
body
	nav(class='topnav')
		p #[strong Featured Wikipedia] >
		a(href='' id='buttonOverall' class='active') Overall
		a(href='' id='buttonIndividual') Individual
	div#header.row
		div.col-12
			h1.overall Overall
			h1.individual Individual
	div#content.row
		div.col-6.info
			div.overall
				p The Article with the Most Revisions
				p #[strong #{mostRevisions}]
				p The Article with the Least Revisions
				p #[strong #{leastRevisions}]
				p The Article Edited by the Largest Group of Registered Users
				p #[strong #{mostEdits}]
				p The Article Edited by the Largest Group of Registered Users
				p #[strong #{leastEdits}]

			div.individual
				form(action='/getIndividual' method='GET')
					label Select an Article
					select
						option
				p Title
				p #[strong #{articleTitle}]
				p Revisions
				p #[strong #{revisions}]
				p Top 5 Regular Users
				p #[strong #{regularUsers}]

		div.col-6.charts
			div.overall
				p Distribution Charts
				a(href='' class='chartlink active' id='overallDistriYear') By Year
				a(href='' class='chartlink' id='overallDistriUser') By User Type

				div#overallChart

			div.individual
				p Distribution Charts
				a(href='' class='chartlink active' id='indiDistriYear') By Year
				a(href='' class='chartlink' id='indiDistriUser') By User Type
				a(href='' class='chartlink' id='indiDistriReg') By Regular Users
				br
				form(id='selectUser' action='/selectDistriByUsers' method='GET')
					label Select a User
					select
						option

				div#indiCharts


